{
  "name": "@outloud/adonis-openapi",
  "description": "Generate OpenAPI specifications on Adonis",
  "version": "0.3.7",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build"
  ],
  "exports": {
    ".": "./build/index.js",
    "./commands": "./build/commands/main.js",
    "./provider": "./build/providers/openapi.provider.js",
    "./services/main": "./build/services/main.js",
    "./types": "./build/src/types.js",
    "./decorators": "./build/src/decorators.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "index:commands": "adonis-kit index build/commands",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "test": "c8 pnpm quick:test",
    "prebuild": "pnpm clean",
    "build": "tsc -p tsconfig.build.json && pnpm copy:templates && pnpm index:commands",
    "dev": "tsc --watch",
    "version": "pnpm build"
  },
  "keywords": [
    "adonis",
    "adonisjs",
    "openapi",
    "oapi",
    "api",
    "typescript"
  ],
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.17.0",
    "@adonisjs/lucid": "^21.6.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/assert": "^4.0.0",
    "@japa/expect-type": "^2.0.2",
    "@japa/file-system": "^2.3.1",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@outloud/eslint-config-adonisjs": "^1.1.7",
    "@swc/core": "1.10.3",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.10.2",
    "@types/sinon": "^17.0.3",
    "@vinejs/vine": "^3.0.0",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.22.0",
    "luxon": "^3.5.0",
    "openapi-types": "^12.1.3",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/lucid": "^21.2.0",
    "@vinejs/vine": "^3.0.0",
    "luxon": "^3.5.0"
  },
  "dependencies": {
    "openapi-metadata": "^0.1.1"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
